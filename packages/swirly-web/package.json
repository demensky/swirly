{
  "name": "swirly-web",
  "version": "0.13.0",
  "private": true,
  "scripts": {
    "build": "yarn run clean && mkdir -p dist && run-p \"build:*\"",
    "build:html": "run-s \"build:html:*\"",
    "build:html:01_minify": "html-minifier --collapse-whitespace src/index.html > dist/index.html",
    "build:html:02_dev": "sed s/__SCRIPT__/bundle.js/ dist/index.html > dist/debug.html",
    "build:html:03_prod": "sed -i s/__SCRIPT__/bundle.min.js/ dist/index.html",
    "build:css": "cleancss -o dist/style.css src/style.css",
    "build:js": "webpack",
    "clean": "rm -rf dist"
  },
  "dependencies": {
    "core-js": "^3.6.5",
    "split.js": "^1.5.11",
    "swirly-parser": "^0.13.0",
    "swirly-renderer": "^0.13.0",
    "swirly-theme-default-dark": "^0.13.0",
    "swirly-theme-default-light": "^0.13.0"
  },
  "devDependencies": {
    "@types/split.js": "^1.4.0",
    "clean-css-cli": "^4.3.0",
    "html-minifier": "^4.0.0",
    "npm-run-all": "^4.1.5",
    "run-sequence": "^2.2.1",
    "ts-loader": "^7.0.4",
    "webpack": "^4.43.0",
    "webpack-cli": "^3.3.11"
  }
}
