{
  "name": "swirly",
  "private": true,
  "scripts": {
    "test": "run-s 'test:*' && lerna run test",
    "test:lint": "standard \"**/*.js\"",
    "test:deps": "scripts/depcheck.sh",
    "format": "prettier-standard \"**/*.js\" && standard --fix \"**/*.js\"",
    "publish": "lerna publish"
  },
  "devDependencies": {
    "depcheck": "^0.8.3",
    "husky": "^3.0.5",
    "lerna": "^3.18.1",
    "lint-staged": "^9.2.5",
    "npm-run-all": "^4.1.5",
    "prettier-standard": "^15.0.1",
    "standard": "^14.1.0"
  },
  "standard": {
    "globals": [
      "Image",
      "DOMParser",
      "XMLSerializer"
    ]
  },
  "lint-staged": {
    "*.js": [
      "prettier-standard",
      "standard --fix",
      "git add"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged && scripts/build-examples.sh"
    }
  },
  "workspaces": [
    "packages/*"
  ]
}
