{
  "name": "swirly-web",
  "version": "0.9.0",
  "private": true,
  "scripts": {
    "postversion": "yarn run deploy",
    "build": "yarn run clean && mkdir -p dist && run-p \"build:*\"",
    "build:html": "html-minifier --collapse-whitespace src/index.html > dist/index.html",
    "build:css": "cleancss -o dist/style.css src/style.css",
    "build:js": "rollup -c",
    "build:now": "cp -R .now dist/",
    "clean": "rm -rf dist",
    "deploy": "yarn run build && now ./dist --prod --no-clipboard"
  },
  "dependencies": {
    "@babel/polyfill": "^7.8.7",
    "split.js": "^1.5.11",
    "swirly-parser": "^0.9.0",
    "swirly-renderer": "^0.9.0"
  },
  "devDependencies": {
    "@babel/core": "^7.9.0",
    "@babel/preset-env": "^7.9.5",
    "@rollup/plugin-babel": "^5.0.0",
    "@rollup/plugin-commonjs": "^11.1.0",
    "@rollup/plugin-json": "^4.0.3",
    "@rollup/plugin-node-resolve": "^7.1.3",
    "clean-css-cli": "^4.3.0",
    "html-minifier": "^4.0.0",
    "now": "^18.0.0",
    "npm-run-all": "^4.1.5",
    "rollup": "^2.7.3",
    "rollup-plugin-terser": "^5.3.0"
  }
}
