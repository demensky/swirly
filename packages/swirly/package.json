{
  "name": "swirly",
  "description": "A marble diagram generator.",
  "version": "0.16.0",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/timdp/swirly.git",
    "directory": "packages/swirly"
  },
  "homepage": "https://swirly.dev",
  "author": {
    "name": "Tim De Pauw",
    "url": "https://tmdpw.eu"
  },
  "publishConfig": {
    "access": "public"
  },
  "files": [
    "src/",
    "dist/"
  ],
  "bin": {
    "swirly": "dist/cli.js"
  },
  "scripts": {
    "build": "yarn run clean && yarn run build:tsconfig && yarn run build:js",
    "build:tsconfig": "node ../../scripts/build-tsconfig.js",
    "build:js": "tsc",
    "clean": "shx rm -rf dist",
    "prepare": "yarn run build"
  },
  "engines": {
    "node": ">=10"
  },
  "dependencies": {
    "@swirly/parser": "^0.16.0",
    "@swirly/rasterization-client": "^0.16.0",
    "@swirly/rasterization-server": "^0.16.0",
    "@swirly/renderer-node": "^0.16.0",
    "@swirly/theme-default-dark": "^0.16.0",
    "@swirly/theme-default-light": "^0.16.0",
    "hard-rejection": "^2.1.0",
    "js-yaml": "^4.0.0",
    "source-map-support": "^0.5.19",
    "stream-to-promise": "^3.0.0",
    "svgo": "^1.3.2",
    "yargs": "^16.1.0"
  },
  "devDependencies": {
    "@swirly/types": "^0.16.0",
    "@types/js-yaml": "^4.0.0",
    "@types/node": "^14.14.6",
    "@types/stream-to-promise": "^2.2.1",
    "@types/svgo": "^1.3.3",
    "@types/yargs": "^15.0.9",
    "shx": "^0.3.3"
  },
  "funding": {
    "type": "github",
    "url": "https://github.com/sponsors/timdp"
  }
}
