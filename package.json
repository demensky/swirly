{
  "name": "swirly",
  "private": true,
  "scripts": {
    "build": "lerna run build",
    "buildfast": "npm-run-all build:parser-rxjs --parallel build:cli build:web",
    "build:parser-rxjs": "yarn workspace @swirly/parser-rxjs build",
    "build:cli": "yarn workspace swirly tsc --build",
    "build:web": "yarn workspace @swirly/web build",
    "clean": "lerna run clean",
    "test": "lerna run test",
    "lint": "yarn run lint:js && yarn run lint:deps",
    "lint:js": "standardx \"**/*.{js,ts}\"",
    "lint:deps": "scripts/depcheck.sh",
    "format": "prettier-standard \"**/*.{js,ts}\" && standardx --fix \"**/*.{js,ts}\"",
    "publish": "lerna publish"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^3.3.0",
    "@typescript-eslint/parser": "^3.3.0",
    "depcheck": "^0.9.2",
    "eslint-plugin-simple-import-sort": "^5.0.3",
    "fs-extra": "^9.0.1",
    "hard-rejection": "^2.1.0",
    "husky": "^4.3.0",
    "lerna": "^3.22.1",
    "lint-staged": "^10.5.1",
    "prettier-standard": "^16.4.1",
    "standardx": "^5.0.0",
    "typescript": "^3.9.5"
  },
  "standardx": {
    "parser": "@typescript-eslint/parser",
    "plugins": [
      "@typescript-eslint/eslint-plugin"
    ],
    "globals": [
      "Image",
      "DOMParser",
      "XMLSerializer",
      "btoa",
      "localStorage"
    ]
  },
  "eslintConfig": {
    "plugins": [
      "simple-import-sort"
    ],
    "rules": {
      "no-unused-vars": "off",
      "simple-import-sort/sort": "error"
    }
  },
  "lint-staged": {
    "*.{js,ts}": [
      "prettier-standard",
      "standardx --fix"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged && yarn run lint && yarn run buildfast && yarn run test && scripts/build-examples.sh"
    }
  },
  "workspaces": [
    "packages/*"
  ]
}
