{
  "name": "swirly",
  "description": "A marble diagram generator.",
  "version": "0.3.0",
  "license": "MIT",
  "repository": "https://github.com/timdp/swirly",
  "homepage": "https://swirly.now.sh/",
  "author": {
    "name": "Tim De Pauw",
    "url": "https://tmdpw.eu/"
  },
  "main": "index.js",
  "browser": "lib/index.js",
  "files": [
    "index.js",
    "bin/",
    "lib/"
  ],
  "bin": {
    "swirly": "bin/cli.js"
  },
  "engines": {
    "node": ">=10"
  },
  "scripts": {
    "test": "standard",
    "prepare": "scripts/build-examples.sh",
    "postversion": "git push && git push --tags && yarn run deploy",
    "format": "prettier-standard \"**/*.js\" && standard --fix \"**/*.js\"",
    "build": "yarn run clean && mkdir -p dist && run-p build:html build:css build:js",
    "build:html": "html-minifier --collapse-whitespace src/index.html > dist/index.html",
    "build:css": "cleancss -o dist/style.css src/style.css",
    "build:js": "rollup -c",
    "clean": "rm -rf dist",
    "deploy": "yarn run build && now ./dist -A ../now.json --prod"
  },
  "dependencies": {
    "js-yaml": "^3.13.1",
    "puppeteer": "^1.19.0",
    "rxjs": "^6.5.3",
    "simple-sha1": "^3.0.1",
    "xmldom": "^0.1.27",
    "yargs": "^14.0.0"
  },
  "devDependencies": {
    "@babel/core": "^7.6.0",
    "@babel/polyfill": "^7.6.0",
    "@babel/preset-env": "^7.6.0",
    "clean-css-cli": "^4.3.0",
    "html-minifier": "^4.0.0",
    "husky": "^3.0.5",
    "lint-staged": "^9.2.5",
    "now": "^16.2.0",
    "npm-run-all": "^4.1.5",
    "prettier-standard": "^14.0.5",
    "rollup": "^1.21.2",
    "rollup-plugin-babel": "^4.3.3",
    "rollup-plugin-commonjs": "^10.1.0",
    "rollup-plugin-json": "^4.0.0",
    "rollup-plugin-node-resolve": "^5.2.0",
    "rollup-plugin-terser": "^5.1.1",
    "standard": "^14.1.0"
  },
  "standard": {
    "globals": [
      "Image",
      "DOMParser",
      "XMLSerializer",
      "alert"
    ]
  },
  "lint-staged": {
    "*.js": [
      "prettier-standard",
      "standard --fix",
      "git add"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  }
}
